<h1>settings</h1>

<%= form_for(@user) do |f| %>  

<div class="form-horizontal">
    <div class="form-group">
        <label for="inputAge" class="col-md-2 control-label">年齢</label>
        <div class="col-md-1">
<%= f.text_field :age %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputArea" class="col-md-2 control-label">住所</label>
        <div class="col-md-10">
<%= f.text_field :area %>
        </div>
    </div>
    
    <div class="form-group">
        <label for="inputProfile" class="col-md-2 control-label">プロフィール</label>
        <div class="col-md-10">
<%= f.text_area :profile, :size => "20x10" %>
        </div>
    </div>
</div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
<%= f.submit "Change my settings", class: "btn btn-sm btn-primary" %>
        </div>
    </div>
            
<% end %>
