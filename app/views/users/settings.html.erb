<h1>Settings</h1>

<%= form_for(@user) do |f| %>  

<div class="form-horizontal">
    <div class="form-group">
        <label for="inputArea" class="col-md-2 control-label">住所</label>
        <div class="col-md-5">
<%= f.text_field :area %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputAge" class="col-md-2 control-label">年齢</label>
        <div class="col-md-5">
<%= f.text_field :age %>
        </div>
    </div>
    <div class="form-group">
<%= f.label :profile %>
<%= f.text_field :profile rows="4" %>
    </div>
</div>

<%= f.submit "Change my settings", class: "btn btn-large btn-primary" %>
        
<% end %>

